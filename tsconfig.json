{
  "compilerOptions": {
    "target": "ES5",
    "jsx": "react",
    "outDir": "./build/",
    "experimentalDecorators": true,
    "allowJs": true,
    "pretty": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "typeRoots": ["./typings/globals"],
    "baseUrl": ".",
    "paths": {
      "react": ["./typings/globals/react"],
      "react-dom": ["./typings/globals/react-dom"]
    }
  },
  "awesomeTypescriptLoaderOptions": {
    "emitRequireType": false,
    "useBabel": false
  },
  "compiler": "typescript",
  "exclude": [
    "node_modules"
  ]
}